{
  "name": "@mtngtools/utils-core",
  "version": "0.1.0",
  "description": "Core utility functions shared across mtngTOOLS packages",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src",
    "test": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:min": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:typecheck": "tsc --noEmit --skipLibCheck tests/**/*.ts"
  },
  "keywords": ["utils", "mtngtools", "typescript"],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "oxlint": "^1.26.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.7.0",
    "vite": "8.0.0-beta.13",
    "vite-plugin-dts": "^4.5.4",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "vitest": "^4.0.0"
  }
}
